<?xml version="1.0" encoding="utf-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.zhao.mapper.UserMapper">
    <select id="showAll" resultType="user">select *
                                           from user </select>
    <select id="selectByPage" resultType="user">
        select *
        from user
        where status = 1
        limit #{pageStart},#{pageSize}
    </select>
    <select id="selectCount" resultType="long">
        select count(*)
        from user
        where status = 1
    </select>
    <select id="selectById" resultType="user" parameterType="int">
        select *
        from user
        where uid = #{uid}
          and status = 1
    </select>
    <select id="selectByKeyword" resultType="user">
        select * from user
        <where>
            status=1
            and username like #{keyword}
            <bind name="keyword" value="'%'+keyword+'%'"/>
        </where>
    </select>
    <select id="selectByName" resultType="user">
        select * from user
        <where>
            status>=#{status}
            and username = #{username}
        </where>
    </select>
    <select id="selectUserByName" resultType="user">
        select * from user
        <where>
            status=1
            and username = #{username}
        </where>
    </select>
    <select id="selectByUser" resultType="user">
        select * from user
        <where>
            status=1
            and username = #{username}
            and password = #{password}
        </where>
    </select>
    <select id="selectRolesByUsername" resultType="String">
        select role from user_roles
        <where>
            username = #{username}
        </where>
    </select>
    <select id="countField" resultType="long">
        SELECT COUNT(*)
        FROM user
        <where>
            ${field} = #{key}
        </where>
    </select>
    <select id="selectByKey" resultType="user">
        SELECT * FROM user
        <where>
            ${field} = #{key}
        </where>
    </select>
    <insert id="insertUser" parameterType="user">
        insert into user(username, password, birth, email, gender)
        values (#{username}, #{password}, #{birth}, #{email}, 'M')
    </insert>
    <update id="updateUser" parameterType="user">
        UPDATE user
        SET birth=#{birth},
            email=#{email},
            gender=#{gender},
            photo=#{photo}
        WHERE uid = #{uid}
    </update>
</mapper>